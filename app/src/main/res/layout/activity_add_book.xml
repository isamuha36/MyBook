<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddBookActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_tambah_buku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Tambah Buku"
            android:layout_margin="16dp"
            style="@style/bold"/>

        <EditText
            android:id="@+id/edt_link_gambar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Link Gambar Buku"
            android:inputType="text"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_tambah_buku"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Judul Buku -->
        <EditText
            android:id="@+id/edt_judul"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Judul Buku"
            android:inputType="text"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_link_gambar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Penulis -->
        <EditText
            android:id="@+id/edt_penulis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Penulis"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_judul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Tahun Terbit -->
        <EditText
            android:id="@+id/edt_thn_terbit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tahun Terbit"
            android:inputType="number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_penulis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Penerbit -->
        <EditText
            android:id="@+id/edt_penerbit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Penerbit"
            android:inputType="text"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_thn_terbit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Jumlah Halaman -->
        <EditText
            android:id="@+id/edt_jml_halaman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah Halaman"
            android:inputType="number"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_penerbit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Input Sinopsis -->
        <EditText
            android:id="@+id/edt_sinposis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Sinopsis"
            android:inputType="textMultiLine"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_jml_halaman"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/edit_text_bg"/>

        <!-- Simpan Button -->
        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Simpan"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_sinposis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
